
CREATE TABLE CLIENTE (
CPF INTEGER NOT NULL,
NOME VARCHAR (50 ) NOT NULL,
RUA VARCHAR (50 ),
NUMERO INTEGER,
BAIRRO VARCHAR (50 )
);

ALTER TABLE CLIENTE ADD CONSTRAINT PK_CPF 
PRIMARY KEY (CPF);

//INSERT INTO CLIENTE(CPF, NOME, RUA, NUMERO, BAIRRO)
//VALUES(45567, 'Gabriel', 'Laele', 153, 'Laelandia');

CREATE TABLE DEPARTAMENTO (
NOME VARCHAR (50) NOT NULL,
COD INTEGER NOT NULL,
CONSTRAINT PK_COD PRIMARY KEY (COD)
);

SELECT * FROM DEPARTAMENTO;

CREATE TABLE FUNCIONARIO (
NOME VARCHAR (50) NOT NULL,
CIDADE VARCHAR (50),
CPF INTEGER NOT NULL,
COD_DEP INTEGER NOT NULL,
CONSTRAINT PK_CPF_FUNC PRIMARY KEY (CPF),
CONSTRAINT FK_COD_DEP FOREIGN KEY (COD_DEP)
REFERENCES DEPARTAMENTO (COD)
);

SELECT * FROM FUNCIONARIO;